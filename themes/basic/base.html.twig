<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BarcodeFinder{% endblock %}</title>
        <meta name="robots " content="index, follow" />
        <meta name="description" content="Avec plus de 350+ millions de références, retrouvez n'importe quel produit grâce à son code barre via notre système de recherche !">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

            <!--Import Google Icon Font-->
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

            <!-- Compiled and minified CSS -->
            <link rel="stylesheet" href="{{ asset('themes/basic/css/materialize.min.css')}}" />

            <!-- Custom CSS -->
            <link rel="stylesheet"  href="{{ asset('themes/basic/css/style.css')}}" />


        {% endblock %}

    </head>
    <body>

        <nav class="navbar-margin navbar-fixed">
            <div class="nav-wrapper">
            <a href="{{path('home')}}" class="brand-logo">BarcodeFinder</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a href="{{path('home')}}">Accueil</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                  <li><a href="{{path('app_library')}}">Bibliothèque</a></li>
                {% endif %}
                {# <li><a href="{{path('pricing')}}">Tarifs</a></li> #}
                <li><a href="{{path('api_doc')}}">API</a></li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{path('app_logout')}}">Se déconnecter</a></li>
                {% else %}
                    <li><a href="{{path('app_login')}}">Se connecter</a></li>
                {% endif %}
            </ul>
            </div>
        </nav>

      <main>
        {% block body %}{% endblock %}
      </main>


        <footer class="page-footer">
          <div class="container">
            <div class="row">
              <div class="col l6 s12">
                <h5 class="white-text">BarcodeFinder</h5>
                <p class="grey-text text-lighten-4">Retrouvez tous vos articles en un code barre !</p>
              </div>
              <div class="col l4 offset-l2 s12">
                <h5 class="white-text">Liens</h5>
                <ul>
                  <li><a class="grey-text text-lighten-3" href="{{path('app_account')}}">Mon compte</a></li>
                  <li><a class="grey-text text-lighten-3" href="{{path('app_library')}}">Bibliothèque</a></li>
                  <li><a class="grey-text text-lighten-3" href="{{path('app_conditions')}}">Conditions</a></li>
                  <li><a class="grey-text text-lighten-3" href="{{path('app_confidentiality')}}">Confidentialité</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            © {{ 'now' | date('Y') }} Tout droits réservés
            <a class="grey-text text-lighten-4 right" href="https://discord.gg/rBPEe4NPQw">Discord</a>
            </div>
          </div>
        </footer>

        {% block javascripts %}
          {{ encore_entry_script_tags('app') }}
            
          <script type="text/javascript" src="themes/basic/js/jquery-3.6.0.min.js"></script>
            
          <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>

          <script type="text/javascript" src="themes/basic/js/materialize.min.js"></script>

          <script type="text/javascript">
            $(document).ready(function(){
              $('.parallax').parallax();
            });   
          </script>
        {% endblock %}
</body>
</html>
